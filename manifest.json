
{
  "manifest_version": 2,

  "name": "Age Viewer",
  "description": "Look you  age!",
  "version": "1.0",
  "icons": {
    "128": "images/128.png",
    "48": "images/48.png",
    "16": "images/16.png"
  },

  "browser_action": {
    "default_icon": "images/48.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["main.js","settings.js"],
    "persistent": false
  },

  "permissions": [
          "storage",
          "notifications",
          "contextMenus"
        ],

  "options_page": "options.html"
}